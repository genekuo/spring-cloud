	create namespace
	kubectl create namespace hello
	kubectl create namespace spring

	build spring microservices and push image

	mvn clean package docker:build
	docker login
	docker push genedocker/simple-service

	create pod
	kubectl apply -n hello -f pod.yml

	check pods
	kubectl get pods -o wide --all-namespaces

	check nodes
	kubectl get nodes

	check pods
	kubectl describe pod hello-pod

	delete pod
	kubectl delete pods hello-pod --namespace=hello
	hello-deploy-68f476dbdb-6947v

	spring
	kubectl delete pods spring-deploy-5b6dbccf4f-bptfh --namespace=spring
spring-deploy-5b6dbccf4f-bptfh

	create replication controller
	kubectl apply -n hello -f rc.yml

	check replication controller
	kubectl get rc --namespace=hello

	delete replication controller
	kubectl delete rc hello-rc --namespace=hello

	expose
	kubectl expose rc hello-rc --name=hello-svc --target-port=8080 --type=NodePort --namespace=hello

	check service
	kubectl describe svc hello-svc --namespace=hello

	access service
	minikube ip
	http://172.16.66.101:32650/
	http://172.16.66.102:32650/

	delete service
	kubectl delete svc hello-svc --namespace=hello

	create a service
	kubectl apply -n hello -f svc.yml

	check service
	kubectl describe svc hello-svc --namespace=hello
	kubectl get svc hello-svc --namespace=hello

	check endpoint object
	kubectl describe ep hello-svc --namespace=hello
	kubectl get ep hello-svc --namespace=hello

	spring service
	kubectl --kubeconfig ./admin.conf apply -n spring -f spring-svc.yml
	minikube ip
	http://172.16.66.101:30002/hello/gene/kuo
	http://172.16.66.102:30002/hello/gene/kuo

	create a deployment
	kubectl apply -n hello -f deploy.yml

	check a deployment
	kubectl describe deploy hello-deploy --namespace=hello
	kubectl get deploy hello-deploy --namespace=hello

	check Replica Sets
	kubectl get rs --namespace=hello

	spring deploy
	kubectl apply -n spring -f spring-deploy.yml
	kubectl apply -n spring -f spring-deploy.yml --record

	rolling update
	kubectl apply -n hello -f deploy.yml --record

	monitor the progress of the update
	kubectl rollout status deployment hello-deploy --namespace=hello

	verify the update
	kubectl get deploy hello-deploy --namespace=hello
	kubectl describe deploy hello-deploy --namespace=hello

	show update history
	kubectl rollout history deployment hello-deploy --namespace=hello
	kubectl get rs --namespace=hello

	spring
	kubectl rollout history deployment spring-deploy --namespace=spring
	kubectl get rs --namespace=spring

	rollback
	kubectl rollout undo deployment hello-deploy --to-revision=1 --namespace=hello

	spring
	kubectl rollout undo deployment spring-deploy --to-revision=1 --namespace=spring

	roolback rollback
	kubectl rollout undo deployment hello-deploy --to-revision=2 --namespace=hello

	verify the rollback
	kubectl get deploy hello-deploy --namespace=hello
	kubectl rollout status deployment hello-deploy --namespace=hello
